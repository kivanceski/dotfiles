exec_always --no-startup-id autotiling
exec_always --no-startup-id "compton --config ~/.config/compton/compton.conf"

# HDMI monitor setup
exec --no-startup-id xrandr --output HDMI-1 --left-of eDP-1
bindsym $mod+m exec --no-startup-id xrandr --output HDMI-1 --auto --left-of eDP-1
bindsym $mod+o exec --no-startup-id xrandr --output HDMI-1 --off

